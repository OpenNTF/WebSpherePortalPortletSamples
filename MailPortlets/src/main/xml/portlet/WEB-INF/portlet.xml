<?xml version="1.0" encoding="UTF-8"?>
<portlet-app id="com.ibm.portal.samples.mail"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:public="http://www.ibm.com/xmlns/prod/websphere/portal/publicparams/sample/mail"
	version="2.0">

	<!-- include the portlets by reference. The reference is relative to the 
		BASE_DIR parameter in the XSLT. -->
	<portlet href="mail/list/MailListPortlet.xml" />

	<event-definition>
		<qname>public:send</qname>
		<value-type>com.ibm.portal.sample.portlet.mail.common.SendEventBean
		</value-type>
	</event-definition>

	<public-render-parameter>
		<description>Mail Selection</description>
		<identifier>sel</identifier>
		<qname>public:selection</qname>
	</public-render-parameter>

</portlet-app>